<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="iut.view.GraphiquesController">
    
    <VBox>
     
        <TabPane>
            
            <Tab text="Graphique en Barres">
                <BarChart fx:id="barChart" title="Graphique en Barres">
                    <xAxis>
                        <CategoryAxis label="Catégories" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Valeur" />
                    </yAxis>
                </BarChart>
            </Tab>

            <Tab text="Graphique en Lignes">
                <LineChart fx:id="lineChart" title="Graphique en Lignes">
                    <xAxis>
                        <NumberAxis label="Temps" />
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="Valeur" />
                    </yAxis>
                </LineChart>
            </Tab>

            <Tab text="Graphique en Secteurs">
                <PieChart fx:id="pieChart" title="Répartition">
                </PieChart>
            </Tab>
        </TabPane>
      <Button fx:id="buttonretour" mnemonicParsing="false" onAction="#handleButtonRetour" text="Retour" />
    </VBox>
</AnchorPane>
